<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="support_assets_editor" inherit_id="website.assets_editor" name="Website Support Editor">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/website_support/static/src/js/website_support.editor.js"></script>
        </xpath>
    </template>

    <template id="support_front_assert" inherit_id="website.assets_frontend" name="Website Support Front Asserts">
        <xpath expr="/t" position="inside">
            <link rel="stylesheet" href="/website_support/static/src/css/support.css"/>
        </xpath>
    </template>

    <template id="support_assets_backend" inherit_id="web.assets_backend" name="website support ticket backend assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/website_support/static/src/js/website_support.backend.js"></script>
        </xpath>
    </template>

    <template id="support_ticket_survey_page" name="Support Ticket Survey">
        <t t-call="website.layout">
            <div class="container">

                <div class="mt16 mb16">
                    <h1 class="text-center">Your Feedback</h1>
                </div>

                <p>Please give us feedback on our support service</p>
                <blockquote><t t-raw="support_ticket.description"/></blockquote>

                <form method="POST" t-attf-action="/support/survey/process/#{support_ticket.portal_access_key}">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <style>
                    label > input{ /* HIDE RADIO */
                      visibility: hidden; /* Makes input not-clickable */
                      position: absolute; /* Remove input from document flow */
                    }

                    label > input + img{ /* IMAGE STYLES */
                      cursor:pointer;
                      border:2px solid transparent;
                    }

                    label > input:checked + img{ /* (RADIO CHECKED) IMAGE STYLES */
                      border:2px solid #f00;
                    }
                    </style>

                    <label>
                        <input type="radio" name="rating" value="5"/>
                        <img src="/website_support/static/src/img/5-star.jpg"/>
                    </label>

                    <label>
                        <input type="radio" name="rating" value="4"/>
                        <img src="/website_support/static/src/img/4-star.jpg"/>
                    </label>

                    <label>
                        <input type="radio" name="rating" value="3"/>
                        <img src="/website_support/static/src/img/3-star.jpg"/>
                    </label>

                    <label>
                        <input type="radio" name="rating" value="2"/>
                        <img src="/website_support/static/src/img/2-star.jpg"/>
                    </label>

                    <label>
                        <input type="radio" name="rating" value="1"/>
                        <img src="/website_support/static/src/img/1-star.jpg"/>
                    </label>

                    <div class="form-group">
                         <label for="comment">Comment</label>
                        <textarea class="form-control" rows="5" name="comment"></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-lg">Submit Feedback</button>
                    </div>

                </form>

            </div>
        </t>
    </template>

    <template id="account_create" name="Create Support Account">
        <t t-call="web.login_layout">
            <form class="oe_signup_form" role="form" action="/support/account/create/process" method="POST">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                <div class="form-group field-name">
                    <label for="name" class="control-label">Your Name</label>
                    <input type="text" name="name" t-att-value="name" id="name" class="form-control" placeholder="e.g. John Doe" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>

                <div class="form-group field-login">
                    <label for="login" class="control-label">Your Email</label>
                    <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                </div>

                <div class="form-group field-password">
                    <label for="password" class="control-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required="required" t-att-autofocus="'autofocus' if only_passwords else None"/>
                </div>

                <div class="form-group field-confirm_password">
                    <label for="confirm_password" class="control-label">Confirm Password</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="form-control" required="required"/>
                </div>

                <div class="clearfix oe_login_buttons">
                    <a t-attf-href="/web/login" class="btn btn-link pull-right">Back to Login</a>
                    <button type="submit" class="btn btn-primary pull-left">Sign up</button>
                </div>

            </form>
        </t>
    </template>

    <template id="support_ticket_view_list" name="My Support Tickets">
        <t t-call="website.layout">
            <div class="container">

                <div class="mt16 mb16">
                    <h1 class="text-center">My Support Tickets</h1>
                </div>

                <div class="col-md-12">
                    <t t-if="ticket_count > 0">
                        <div style="float:right">
                            <a href="/support/ticket/view">All</a>
                            <t t-foreach="ticket_states" t-as="ticket_state">
                                | <a t-attf-href="/support/ticket/view?state=#{ticket_state.id}"><t t-esc="ticket_state.name"/></a>
                            </t>
                        </div>
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <tr><th>By</th><th>Subject</th><th>Category</th><th>State</th><th>Create Date</th><th>Close Date</th></tr>
                            <t t-foreach="support_tickets" t-as="support_ticket">
                                <tr><td><t t-esc="support_ticket.partner_id.name"/></td><td><a t-attf-href="/support/ticket/view/#{support_ticket.id}"><t t-esc="support_ticket.subject"/></a></td><td><t t-esc="support_ticket.category_id.name"/></td><td><t t-esc="support_ticket.state_id.name"/></td><td><span t-field="support_ticket.with_context(tz=request.env.user.tz).create_date"/></td><td><span t-field="support_ticket.with_context(tz=request.env.user.tz).close_time"/></td></tr>
                            </t>
                        </table>
                    </t>
                    <t t-if="ticket_count == 0">
                        <div class="mt16 mb16">
                            <h2 class="text-center">You have no support tickets</h2>
                        </div>
                    </t>
                </div>

                <br/><br/><br/><br/><br/>

                <div class="mt16 mb16">
                    <h1 class="text-center">Change Requests</h1>
                </div>

                <div class="col-md-12">
                    <t t-if="request_count > 0">
                        <table class="table table-striped table-bordered table-hover table-condensed">
                            <tr><th>Date</th><th>State</th><th>Message</th></tr>
                            <t t-foreach="change_requests" t-as="change_request">
                                <tr><td><t t-esc="change_request.planned_time"/></td><td><t t-esc="change_request.approval_id.name"/></td><td><t t-raw="change_request.approval_message"/></td></tr>
                            </t>
                        </table>
                    </t>
                    <t t-if="request_count == 0">
                        <div class="mt16 mb16">
                            <h2 class="text-center">You have no change requests</h2>
                        </div>
                    </t>
                </div>

            </div>

        </t>
    </template>

    <template id="help_group" name="Help Group">
      <t t-call="website.layout">
        <style>
          .img .zoom {
              max-width: 100%;
              transition: all 0.3s;
              display: block;
              width: 100%;
              height: auto;
              transform: scale(1);
          }

          .img:hover .zoom{
              transform: scale(1.1);
          }
        </style>
        <section class="s_cover parallax s_parallax_is_fixed pt96 pb96 bg-black-50" data-scroll-background-ratio="1" >
          <span class="s_parallax_bg oe_img_bg oe_custom_bg" t-attf-style="background-image: url(#{website.image_url(help_group, 'image') if help_group.image != None else ''}); background-position: 51.02% 11.6%;"/>
          <div class="container">
            <h1 t-field="help_group.name"/>
          </div>
        </section>
        <section class="s_three_columns bg-100 pt32 pb32">
          <div class="container">
            <div class="row d-flex align-items-stretch">
              <t t-foreach="help_group.page_ids" t-as="help_page">
                  <t t-if="help_page.website_published">
                    <div class="col-lg-3 s_col_no_bgcolor pt16 pb16">
                      <div class="card bg-white">
                        <t t-if="help_page.image">
                          <div style="overflow: hidden;">
                            <a t-attf-href="/support/help/#{slug(help_group)}/#{slug(help_page)}">
                              <img class="card-img-top d-block mx-auto" t-att-src="website.image_url(help_page, 'image')"/>
                            </a>
                          </div>
                        </t>
                        <div class="card-body">
                          <a t-attf-href="/support/help/#{slug(help_group)}/#{slug(help_page)}" class="card-title o_default_snippet_text" t-field="help_page.name"/>
                        </div>
                      </div>
                    </div>
                  </t>
                </t>
            </div>
          </div>
        </section>
      </t>
    </template>

    <template id="help_page" name="Help Page">
      <t t-call="website.layout">
        <section class="s_cover parallax pt96 pb96 bg-black-50" data-scroll-background-ratio="1">
            <span class="s_parallax_bg oe_img_bg oe_custom_bg" t-attf-style="background-image: url(#{website.image_url(help_page, 'image') if help_page.image != None else ''}); background-position: 51.02% 11.6%;"/>
            <div class="container">
              <div class="row s_nb_column_fixed">
                <div class="col-lg-12 s_text pt16" data-name="Text">
                  <p class="lead" style="text-align: center;"/>
                  <div style="text-align: left;">
                    <span style="font-size: 1.09375rem;">Help Page</span>
                  </div>
                </div>
                <div class="col-lg-12 s_title" data-name="Title">
                  <h1 class="s_title_thin" style="text-align: left; font-size: 62px;" t-field="help_page.name"/>
                </div>
              </div>
            </div>
        </section>

          <!-- If the user isn't logged -->
          <t t-if="request.env.user.partner_id.name == 'Public user'">
            <section class="pb32 pt32">
              <div class="container">
                <div class="row">
                  <div class="col-lg-3"/>
                  <div class="s_alert clearfix s_alert_sm alert-delta col-lg-6">
                    <span class="fa fa-2x s_alert_icon fa-warning"/>
                    <div class="s_alert_content">
                      <p>To access content, please <a href="/web/login">log in</a></p>
                    </div>
                  </div>
                  <div class="col-lg-3"/>
                </div>
              </div>
            </section>
          </t>

          <t t-if="request.env.user.partner_id.name != 'Public user'">
            <section class="s_two_columns bg-white pt32 pb32">
                  <!-- Start groups of directory -->
                  <div class="container">
                    <div class="row">
                      <div class="s_col_no_bgcolor col-lg-3">
                        <div class="container">
                          <div class="row">
                            <div class="s_col_no_bgcolor pb16 col-lg-12">
                              <div class="card bg-white">
                                <div class="card-body">
                                    <h3 class="card-title">
                                      <div style="text-align: center;">
                                        <span t-esc="help_group.name" style="font-size: 1.53125rem;"/>
                                      </div>
                                    </h3>
                                    <div>
                                      <t t-set="counter" t-value="0"/>
                                      <t t-foreach="help_group.page_ids" t-as="page">
                                        <!-- Make a link to the current page -->
                                        <t t-if="counter &lt; 5">
                                          <!-- Hide the current page if they are too many pages in this group -->
                                          <t t-if="len(help_group.page_ids) &gt; 5 and page.name != help_page.name">
                                            <a t-attf-href="/support/help/#{slug(help_group)}/#{slug(page)}" t-field="page.name"/>
                                            <br></br>
                                            <t t-set="counter" t-value="counter -1"/>
                                          </t>
                                          <!-- If not we can show the current page -->
                                          <t t-if="len(help_group.page_ids) &lt; 6">
                                            <a t-attf-href="/support/help/#{slug(help_group)}/#{slug(page)}" t-field="page.name"/>
                                            <br></br>
                                          </t>
                                        </t>
                                        <t t-set="counter" t-value="counter +1"/>
                                      </t>
                                      <t t-if="counter &gt; 5">
                                        <i class="fa fa-plus-circle mr-1"/>
                                        <small class="o_default_snippet_text">
                                          <a t-attf-href="/support/help/#{slug(help_group)}">See more</a>
                                        </small>
                                      </t>
                                    </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>

                        <!-- Second card with the groups -->
                        <div class="container">
                          <div class="row">
                            <div class="s_col_no_bgcolor pb16 col-lg-12">
                              <!-- Card whith the other groups the user can see -->
                              <t t-if="len(help_groups) &gt; 1">
                                <div class="card bg-white">
                                  <div class="card-body">
                                    <h3 class="card-title">
                                      <div style="text-align: center;">
                                        <span style="font-size: 1.53125rem;">Other groups</span>
                                      </div>
                                    </h3>
                                    <div>
                                      <t t-set="counter" t-value="0"/>
                                      <t t-foreach="help_groups" t-as="group">
                                        <t t-if="counter &lt; 5">
                                          <t t-if="group.name != help_group.name">
                                            <a t-attf-href="/support/help/#{slug(group)}" t-field="group.name"/>
                                            <br></br>
                                          </t>
                                        </t>
                                        <t t-set="counter" t-value="counter+1"/>
                                      </t>
                                      <t t-if="counter &gt; 5">
                                        <i class="fa fa-plus-circle mr-1"/>
                                        <small class="o_default_snippet_text">
                                          <a t-attf-href="/support/help">See more</a>
                                        </small>
                                      </t>
                                    </div>
                                  </div>
                                </div>
                              </t>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="s_col_no_bgcolor pb16 col-lg-9">
                        <div class="container">
                            <div id="wrap" class="oe_structure help_page oe_empty pb32 col-lg-12" t-field="help_page.content" style="min-height:200px;"/>

                            <!-- Submit Feedback -->
                            <div class="col-lg-12">
                              <form method="GET" t-attf-action="/support/feedback/process/#{help_page.id}">
                                  <div t-attf-class="form-group col-lg-12 #{error and 'rating' in error and 'has-error' or ''} ">
                                      <label class="control-label" for="rating">Rating</label><br/>
                                      <input type="radio" name="rating" value="1"/> 1 Star
                                      <input type="radio" name="rating" value="2"/> 2 Star
                                      <input type="radio" name="rating" value="3"/> 3 Star
                                      <input type="radio" name="rating" value="4"/> 4 Star
                                      <input type="radio" name="rating" value="5"/> 5 Star
                                  </div>

                                  <div t-attf-class="form-group mt16 mb16 #{error and 'feedback' in error and 'has-error' or ''}">
                                      <label class="control-label" for="feedback">Feedback</label>
                                      <textarea class="form-control" name="feedback" style="min-height: 120px" required="True"/>
                                  </div>

                                  <div class="form-group">
                                      <button class="btn btn-primary flat">Submit Feedback</button>
                                  </div>
                              </form>
                            </div>
                        </div>
                      </div>
                    </div>
                  </div>
            </section>
          </t>
      </t>
    </template>

    <template id="support_ticket_view" name="Support Ticket">
        <t t-call="website.layout">
            <div class="container mt16 mb16">

                <style>

                /* Worlds laziest way of striping replies... */
                .moz-cite-prefix, blockquote {
                 display :none
                }

                </style>

               <script>
                   $('#file').change(function(){
                       if(this.files.length > <t t-esc="setting_max_ticket_attachments"/>) {
                           alert("You can only upload " + <t t-esc="setting_max_ticket_attachments"/> + " files");
                       }

                        for (var x in this.files) {
                           if (this.files[x].size / 1024 > <t t-esc="setting_max_ticket_attachment_filesize"/>) {
                               alert(this.files[x].name + " exceeds the " + <t t-esc="setting_max_ticket_attachment_filesize"/> + "KB file size limit");
                               $('#file').val('');
                           }
                       }

                    });
                </script>

                <div class="mt16 mb16">
                    <h1 class="text-center"><t t-esc="support_ticket.subject"/></h1>
                </div>

                <b>Category</b> <t t-esc="support_ticket.category_id.name"/><br/>
                <b>State</b> <t t-esc="support_ticket.state_id.name"/><br/>
                <b>Description</b><br/><t t-raw="support_ticket.description"/><br/>
                <br/>
                <b>Conversation History</b><br/>
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr><th>By</th><th>From</th><th>Message</th></tr>
                    <t t-foreach="support_ticket.conversation_history_ids" t-as="chat">
                        <tr><td><t t-esc="chat.by"/></td><td>
                            <t t-if="chat.by == ''">
                                <t t-esc="chat.create_uid.name"/>
                            </t>
                            <t t-if="chat.by == 'staff'">
                                <t t-esc="chat.create_uid.name"/>
                            </t>
                            <t t-if="chat.by == 'customer'">
                                <t t-if="chat.ticket_id.person_name">
                                    <t t-esc="chat.ticket_id.person_name"/>
                                </t>
                                <t t-if="not chat.ticket_id.person_name">
                                    <t t-esc="chat.ticket_id.email"/>
                                </t>
                            </t>

                        </td>
                        <td><t t-raw="chat.content"/></td></tr>
                    </t>
                </table>
                <t t-if="portal_access_key">
                    <form method="POST" action="/support/ticket/comment" enctype="multipart/form-data">
                        <b>Add Comment</b><br/>
                        <textarea  class="form-control" name="comment" rows="6" required="True"></textarea>
                        <br/>
                        <div name="file_container" t-attf-class="form-group #{error and 'file' in error and 'has-error' or ''}">
                            <b>Add Attachments</b><br/>
                            <div class="btn btn-default btn-file" style="margin-bottom:16px;padding-left:0px;"><input name="file" id="file" type="file" multiple="multiple"/></div>
                        </div>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="portal_access_key" t-attf-value="#{portal_access_key}"/>
                        <button class="btn btn-primary btn-lg">Submit</button>
                    </form>
                </t>
                <t t-if="not portal_access_key">
                    <form method="POST" action="/support/ticket/comment" enctype="multipart/form-data" style="display:inline;">
                        <b>Add Comment</b><br/>
                        <textarea  class="form-control" name="comment" style="min-height: 120px" required="True"></textarea>
                        <br/>
                        <div name="file_container" t-attf-class="form-group #{error and 'file' in error and 'has-error' or ''}">
                            <b>Add Attachments</b><br/>
                            <div class="btn btn-default btn-file" style="margin-bottom:16px;padding-left:0px;"><input name="file" id="file" type="file" multiple="multiple"/></div>
                        </div>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="ticket_id" t-attf-value="#{support_ticket.id}"/>
                        <button class="btn btn-primary btn-lg">Submit</button>
                    </form>
                    <form method="GET" t-attf-action="/support/ticket/close" style="display:inline;">
                        <input type="hidden" name="ticket_id" t-attf-value="#{support_ticket.id}"/>
                        <button class="btn btn-primary btn-lg pull-right">Close Ticket</button>
                    </form>
                </t>
            </div>

        </t>
    </template>

    <template id="support_help_pages" name="Support Help Pages">
      <t t-call="website.layout">
        <script>
            $(document).ready(function() {
                $("#search_help_pages").autocomplete({
                    source: '/support/help/auto-complete',
                    minLength: 1,
                    select: function( event, ui ) {
                        window.location.href = ui.item.value;
                    }
                    }).data("ui-autocomplete")._renderItem = function (ul, item) {
                        return $("<li></li>")
                            .data("item.autocomplete", item)
                            .append("<a>" + item.label + "</a>")
                        .appendTo(ul);
                };
            });
        </script>
        <style>
          .img .zoom {
              max-width: 100%;
              transition: all 0.3s;
              display: block;
              width: 100%;
              height: auto;
              transform: scale(1);
          }

          .img:hover .zoom{
              transform: scale(1.1);
          }
        </style>

        <!-- Header title image -->
        <section class="s_cover parallax pt96 pb96 bg-black-50" data-scroll-background-ratio="1" style="background-image: none;">
          <span class="s_parallax_bg oe_img_bg oe_custom_bg"/>
          <div class="container">
            <div class="row s_nb_column_fixed">
              <div class="col-lg-12 s_title" data-name="Title">
                <h1 class="s_title_thin" style="text-align: left; font-size: 62px;">Assistance</h1>
              </div>
              <div class="col-lg-12 s_text pb16 pt0" data-name="Text">
                <p class="lead" style="text-align: center;"/>
                <div style="text-align: left;">
                  <span style="font-size: 1.09375rem;">Information on technical support</span>
                </div>
                <p/>
              </div>
            </div>
          </div>
        </section>

        <section class="s_three_columns bg-white pt32 pb16">
          <div class="container">
            <div class="row d-flex align-items-stretch">
              <div class="s_col_no_bgcolor pt16 pb16 col-lg-6" style="margin-left=auto; margin-right=auto;">
                <div class="card bg-white">
                  <div class="card-body">
                    <h4 class="card-title o_default_snippet_text" style="text-align: center; ">
                      <font style="font-size: 24px;">Your technical issues</font>
                    </h4>
                    <p class="card-text">Assistance available :</p>
                    <ul>
                      <li>
                        <p class="card-text">From Monday to Friday</p>
                      </li>
                      <li>
                        <p class="card-text">9:00 to 12:00 and 14:00 to 18:00</p>
                      </li>
                    </ul>
                    <p class="card-text">
                      <i>(Excluding holidays)</i>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section>
          <div class="container">
              <div class="mt16 mb16">
                  <div class="text-right">
                      <t t-if="request.env.user.partner_id.name == 'Public user'">
                          <t t-if="setting_allow_user_signup">
                              <a href="/support/account/create">Create Account</a> |
                          </t>
                      </t>
                      <t t-if="manager">
                          | <a href="/support/ticket/reporting">Reporting</a>
                      </t>
                  </div>

                  <div class="row d-flex align-items-stretch">
                    <div class="s_col_no_bgcolor pt16 pb16  col-lg-12">
                      <div class="card bg-white">
                        <div class="card-body">
                          <h3 class="card-title">
                            <div style="text-align: center;">
                              <span style="font-size: 1.53125rem;">Your support requests</span>
                            </div>
                          </h3>
                          <p class="card-text" style="text-align: center; ">
                            <t t-if="request.env.user.partner_id.name == 'Public user'">
                              <t t-if="setting_allow_user_signup"><a class="btn btn-alpha flat btn-sm" href="/support/account/create">Create Account</a> |
                                      </t>
                            </t>
